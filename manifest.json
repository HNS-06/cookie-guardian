{
  "manifest_version": 3,
  "name": "Cookie Guardian",
  "version": "1.0.2",
  "description": "Professional cookie management with encryption, automatic cleanup, and privacy protection",
  "permissions": [
    "cookies",
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "alarms",
    "downloads",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.cookieguardian.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cookie Guardian",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "privacy-report.html",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}